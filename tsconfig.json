{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,

    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",

    "lib": ["ES2020", "DOM"],

    "jsx": "react-jsx",
    "jsxImportSource": "react",

    "allowJs": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
